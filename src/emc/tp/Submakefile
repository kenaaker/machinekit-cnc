TP_DIR := emc/tp
INCLUDES += $(TP_DIR) ../include


../include/%.h: ./$(TP_DIR)/%.h
	$(ECHO) Copying header file $@
	$(Q)cp $^ $@
../include/%.hh: ./$(TP_DIR)/%.hh
	$(ECHO) Copying header file $@
	$(Q)cp $^ $@


$(eval $(call c_comp_build_rules,$(TP_DIR)/tp.o, \
	$(TP_DIR)/tcq.o 		\
	$(TP_DIR)/tc.o 		\
	$(TP_DIR)/tpmain.o 	\
	$(TP_DIR)/blendmath.o 	\
	$(TP_DIR)/spherical_arc.o 	\
	emc/nml_intf/emcpose.o))
